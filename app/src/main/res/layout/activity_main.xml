<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpe277.yaminimuralidharen.currencyexchangeapplication.MainActivity">
    <TextView
        android:id="@+id/str_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Conversion Exchange"
        android:textColor="#000000"
        android:layout_centerHorizontal="false"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/dlr_amt_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/str_header"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="15dp"
        android:text="Dollar Amount:"
        android:textColor="#000000"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/dlr_value_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/str_header"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/dlr_amt_txt_view"
        android:layout_centerHorizontal="false"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        />
    <TextView
        android:id="@+id/convert_to_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert To:"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/dlr_amt_txt_view"
        android:textColor="#000000"
        android:layout_centerHorizontal="false"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        />
    <TextView
        android:id="@+id/country_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/dlr_amt_txt_view"
        android:layout_toRightOf="@+id/convert_to_txt_view"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        />
    <Button
        android:id="@+id/apply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textColor="#fff"
        android:layout_below="@+id/convert_to_txt_view"
        android:background="#000000"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
       android:layout_centerHorizontal="true"
        android:onClick="ApplyConversion"
        />
    <Button
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="#fff"
        android:layout_below="@+id/convert_to_txt_view"
        android:layout_toRightOf="@+id/apply_button"
        android:background="#000000"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:onClick="CloseApplication"
        />
</RelativeLayout>
